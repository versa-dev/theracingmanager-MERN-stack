{
  "main": "server/index.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 start server",
    "restart": "run-s stop start",
    "dev": "nodemon --inspect=3100 server",
    "test-once": "mocha ./server/setup/test.js --recursive $(find server -name '*.spec.js')",
    "test": "npm run test-once -- -w",
    "lint-no-fix": "eslint ./server/*",
    "lint": "npm run lint-no-fix -- --fix",
    "setup-search": "node server/scripts/setupSearch",
    "test-debug": "mocha --inspect=3100 --debug-brk  -w ./server/setup/test.js --recursive $(find server -name '*.spec.js')",
    "list": "forever list",
    "stop": "forever stop 0",
    "logs": "forever logs 0",
    "news": "node server/scripts/news",
    "news-cron": "node server/scripts/news/cron",
    "stats": "node server/scripts/statistics",
    "stats-cron": "node server/scripts/statistics/cron",
    "flush": "node server/scripts/flush",
    "timeform": "node server/scripts/timeform",
    "update-timeform": "node server/scripts/updateTimeform",
    "demo": "node server/scripts/demo",
    "messages": "node server/scripts/messages",
    "populate": "run-s flush timeform demo messages setup-search",
    "timeform-test": "mocha -t 10000 ./server/script/timeform/test.js",
    "email": "node server/scripts/email",
    "sms": "node server/scripts/sms",
    "apn": "node server/scripts/apn",
    "gcm": "node server/scripts/gcm",
    "notification": "node server/scripts/notification",
    "add-manager-user": "node server/scripts/addUser -r manager",
    "new-horse": "node server/scripts/newHorse -n -s",
    "contego-update": "node server/scripts/contego",
    "contego-update-cron": "node server/scripts/contego/cron"
  },
  "pre-commit": [
    "lint-no-fix",
    "test-once"
  ],
  "dependencies": {
    "algoliasearch": "^3.24.6",
    "apn": "^2.1.5",
    "babel-core": "^6.25.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-register": "^6.24.1",
    "bcrypt": "^1.0.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "bodymen": "^1.0.3",
    "chai": "^4.0.0",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "config": "^1.28.1",
    "cron": "^1.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "forever": "^0.15.3",
    "fs-extra": "^3.0.1",
    "handlebars": "^4.0.10",
    "jsonwebtoken": "^7.4.1",
    "mime": "^1.6.0",
    "mocha": "^3.4.2",
    "moment": "^2.19.2",
    "mongoose": "^4.13.5",
    "mongoose-algolia": "^1.7.0",
    "mongoose-unique-validator": "^1.0.5",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "node-gcm": "^0.14.9",
    "nodemailer": "^4.4.0",
    "nodemailer-mailgun-transport": "^1.3.5",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pretty-error": "^2.1.1",
    "promise-ftp": "^1.3.3",
    "randomstring": "^1.1.5",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "stripe": "^5.1.1",
    "twilio": "^3.10.0",
    "validator": "^8.2.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "dirty-chai": "^2.0.1",
    "eslint": "^4.12.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "pre-commit": "^1.2.2"
  }
}
